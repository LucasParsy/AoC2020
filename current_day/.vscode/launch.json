{
    "version": "0.2.0",
    "configurations": [
      {
        "preLaunchTask": "Cargo build",
        "type": "lldb",
        "request": "launch",
        "name": "Launch",
        "args": [],
        "program": "${workspaceFolder}/target/debug/current_day",
        "windows": {
          "name": "Launch",
          "type": "lldb",
          "request": "launch",  
          "program": "${workspaceFolder}/target/debug/current_day.exe",
          "sourceMap": {
            "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
          }
  
        },
        "cwd": "${workspaceFolder}",
        "stopOnEntry": false,
        "sourceLanguages": ["rust"],
        "sourceMap": {
          "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/src/rust"
        }
      },
    ]
  }
  